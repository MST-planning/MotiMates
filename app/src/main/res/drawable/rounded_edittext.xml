<!-- res/drawable/rounded_edittext.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리 색상 -->
    <solid android:color="#FFFFFF" />

    <!-- 테두리 둥근 모서리 설정 -->
    <corners android:radius="16dp" />

    <!-- 테두리 선 색상과 두께 설정 -->
    <stroke
        android:color="#CCCCCC"
        android:width="1dp" />

    <!-- 가로 및 세로 크기 설정 -->
    <size
        android:width="200dp"
        android:height="50dp" />

</shape>
