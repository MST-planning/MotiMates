            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@android:color/white"/>

                <ImageView
                    android:layout_width="0dp"
